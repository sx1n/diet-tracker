<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DietTracker" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/gray_900</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">@color/gray_900</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginButton">
        <item name="android:background">@drawable/welcome_btn_login</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="RegisterButton">
        <item name="android:background">@drawable/welcome_btn_register</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackButton">
        <item name="android:backgroundTint">@color/gray_900</item>
        <item name="tint">@color/white</item>
    </style>
</resources>