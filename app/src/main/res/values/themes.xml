<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DietTracker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--        <item name="colorPrimary">@color/green_300</item>-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayoutStyle</item>
    </style>

    <style name="Theme.DietTracker" parent="Base.Theme.DietTracker" />

    <style name="BACKGROUND">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LoginButton">
        <item name="android:background">@drawable/welcome_btn_login</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomButton">
        <item name="android:background">@drawable/welcome_btn_register</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="Widget.App.TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout.OutlinedBox</item>
        <item name="cursorColor">@color/black</item>
        <item name="boxStrokeErrorColor">@color/red_300</item>
        <item name="cursorErrorColor">@color/red_300</item>
        <item name="errorIconTint">@color/red_300</item>
        <item name="errorTextAppearance">@font/inter_bold</item>
        <item name="errorTextColor">@color/red_300</item>
        <item name="counterOverflowTextColor">@color/red_300</item>
        <item name="counterOverflowTextAppearance">@font/inter_bold</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout.OutlinedBox" parent="">
        <item name="colorPrimary">@color/green_300</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="RadioButton">
        <item name="android:button">@color/transparent</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">@color/radio_button_text_color_light</item>
    </style>
</resources>